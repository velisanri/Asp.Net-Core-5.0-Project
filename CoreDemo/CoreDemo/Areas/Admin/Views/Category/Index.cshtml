@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>



@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <th>@item.CategoryName</th>
            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID/" id="DeleteBtn" onclick="return confirm('silmek istiyon mu');" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-warning>Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
    }

</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni Kategori</a>
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))